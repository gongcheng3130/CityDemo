<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:minHeight="35dp"
    android:background="@drawable/selecte_bg_white_to_gray_bg_gray_x1_c4">

    <ImageView
        android:id="@+id/city_history_iv_local"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="2dp"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:src="@mipmap/icon_location"/>

    <TextView
        android:id="@+id/city_history_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerInParent="true"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/text_main_dark_gray"/>

    <ImageView
        android:id="@+id/city_history_iv_clear"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_delete"/>

</RelativeLayout>
